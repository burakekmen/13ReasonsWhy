<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="example.yunus.a13reasonswhy.Fragments.TapesFragment">


<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="120dp"
            android:background="@color/tape_color"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/justin_tape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="1.KASET: JUSTIN FOLEY" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="120dp"
            android:background="@color/tape_color"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/alex_tape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="2.KASET: ALEX STANDALL" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="120dp"
            android:background="@color/tape_color"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/jessica_tape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="3.KASET: JESSICA DAVIS" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="120dp"
            android:background="@color/tape_color"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tyler_tape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="4.KASET: TYLER DOWN" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="120dp"
            android:background="@color/tape_color"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/courtney_tape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="5.KASET: COURTNEY CRIMSON" />
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
</FrameLayout>
